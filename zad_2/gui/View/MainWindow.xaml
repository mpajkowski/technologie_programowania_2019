<Window x:Class="gui.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:gui"
	mc:Ignorable="d"
	Title="Aplikacja dla kasyna" Height="557.76" Width="901.707">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.Row="0" Margin="0,10,0,0" Height="597" VerticalAlignment="Top">
            <TabItem Header="Gracze">
                <Grid>
                    <Grid Margin="0,0,110,62">
                        <DataGrid IsReadOnly="True" ItemsSource="{Binding Gamblers}" SelectedItem="{Binding CurrentGambler}"
							Margin="10,10,0,0" 
							HorizontalAlignment="Left"
							Height="293"
							VerticalAlignment="Top"
							Width="756"
							AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID gracza" Binding="{Binding gambler_id}"/>
                                <DataGridTextColumn Header="Imię" Binding="{Binding gambler_name}"/>
                                <DataGridTextColumn Header="Nazwisko" Binding="{Binding gambler_surname}"/>
                                <DataGridTextColumn Header="Nr telefonu" Binding="{Binding gambler_phone_number}"/>
                                <DataGridTextColumn Header="Miasto" Binding="{Binding gambler_address_city}"/>
                                <DataGridTextColumn Header="Ulica" Binding="{Binding gambler_address_street}"/>
                                <DataGridTextColumn Header="Kod pocztowy" Binding="{Binding gambler_address_postalcode}"/>
                                <DataGridTextColumn Header="Kraj" Binding="{Binding gambler_address_country}"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button x:Name="GamblersDownloadButton" Content="Pobierz dane" HorizontalAlignment="Left" Margin="682,388,0,0" VerticalAlignment="Top" Width="84" Command="{Binding GetGamblerDataCmd}" RenderTransformOrigin="0.571,1.318" />

                        <Label Content="Imię" HorizontalAlignment="Left" Margin="10,303,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,334,0,0" TextWrapping="Wrap" Text="{Binding CurrentGambler.gambler_name, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="267"/>

                        <Label Content="Nazwisko" HorizontalAlignment="Left" Margin="300,303,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="300,334,0,0" TextWrapping="Wrap" Text="{Binding CurrentGambler.client_surname, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="267"/>

                        <Label Content="Nr telefonu" HorizontalAlignment="Left" Margin="587,303,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="587,334,0,0" TextWrapping="Wrap" Text="{Binding CurrentGambler.phone_number, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="179"/>

                        <Label Content="Miasto" HorizontalAlignment="Left" Margin="10,362,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,388,0,0" TextWrapping="Wrap" Text="{Binding CurrentGambler.address.city, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="267"/>

                        <Label Content="Ulica" HorizontalAlignment="Left" Margin="300,362,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="300,388,0,0" TextWrapping="Wrap" Text="{Binding CurrentGambler.address.street, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="267"/>

                        <Label Content="Kod pocztowy" HorizontalAlignment="Left" Margin="10,416,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.235,5.231"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,447,0,0" TextWrapping="Wrap" Text="{Binding CurrentGambler.address.postal_code, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="267"/>

                        <Label Content="Kraj" HorizontalAlignment="Left" Margin="300,416,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.867,0.654"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="300,447,0,0" TextWrapping="Wrap" Text="{Binding CurrentGambler.address.country, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="267"/>

                        <Button Content="Aktualizuj!" HorizontalAlignment="Left" Margin="587,388,0,0" VerticalAlignment="Top" Width="75" Command="{Binding UpdateCurrentGamblerCmd}"/>

                        <Button Content="Usuń!" HorizontalAlignment="Left" Margin="587,447,0,0" VerticalAlignment="Top" Width="75" Command="{Binding DeleteCurrentGamblerCmd}"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Krupierzy">
                <Grid>
                    <Grid Margin="0,0,110,62">
                        <DataGrid IsReadOnly="True" ItemsSource="{Binding Croupiers}" SelectedItem="{Binding CurrentCroupier}"
							Margin="10,10,0,0" 
							HorizontalAlignment="Left"
							Height="293"
							VerticalAlignment="Top"
							Width="756"
							AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID krupiera" Binding="{Binding croupier_id}"/>
                                <DataGridTextColumn Header="Imię" Binding="{Binding croupier_name}"/>
                                <DataGridTextColumn Header="Nazwisko" Binding="{Binding croupier_surname}"/>
                                <DataGridTextColumn Header="Nr telefonu" Binding="{Binding croupier_phone_number}"/>
                                <DataGridTextColumn Header="Miasto" Binding="{Binding croupier_address_city}"/>
                                <DataGridTextColumn Header="Ulica" Binding="{Binding croupier_address_street}"/>
                                <DataGridTextColumn Header="Kod pocztowy" Binding="{Binding croupier_address_postalcode}"/>
                                <DataGridTextColumn Header="Kraj" Binding="{Binding croupier_address_country}"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button x:Name="CroupiersDownloadButton" Content="Pobierz dane" HorizontalAlignment="Left" Margin="682,388,0,0" VerticalAlignment="Top" Width="84" Command="{Binding GetCroupierDataCmd}" RenderTransformOrigin="0.571,1.318" />

                        <Label Content="Imię" HorizontalAlignment="Left" Margin="10,303,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,334,0,0" TextWrapping="Wrap" Text="{Binding CurrentCroupier.gambler_name, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="267"/>

                        <Label Content="Nazwisko" HorizontalAlignment="Left" Margin="300,303,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="300,334,0,0" TextWrapping="Wrap" Text="{Binding CurrentCroupier.client_surname, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="267"/>

                        <Label Content="Nr telefonu" HorizontalAlignment="Left" Margin="587,303,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="587,334,0,0" TextWrapping="Wrap" Text="{Binding CurrentCroupier.phone_number, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="179"/>

                        <Label Content="Miasto" HorizontalAlignment="Left" Margin="10,362,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,388,0,0" TextWrapping="Wrap" Text="{Binding CurrentCroupier.address.city, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="267"/>

                        <Label Content="Ulica" HorizontalAlignment="Left" Margin="300,362,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="300,388,0,0" TextWrapping="Wrap" Text="{Binding CurrentCroupier.address.street, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="267"/>

                        <Label Content="Kod pocztowy" HorizontalAlignment="Left" Margin="10,416,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.235,5.231"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,447,0,0" TextWrapping="Wrap" Text="{Binding CurrentCroupier.address.postal_code, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="267"/>

                        <Label Content="Kraj" HorizontalAlignment="Left" Margin="300,416,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.867,0.654"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="300,447,0,0" TextWrapping="Wrap" Text="{Binding CurrentCroupier.address.country, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="267"/>

                        <Button Content="Aktualizuj!" HorizontalAlignment="Left" Margin="587,388,0,0" VerticalAlignment="Top" Width="75" Command="{Binding UpdateCurrentCroupierCmd}"/>

                        <Button Content="Usuń!" HorizontalAlignment="Left" Margin="587,447,0,0" VerticalAlignment="Top" Width="75" Command="{Binding DeleteCurrentCroupierCmd}"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Gry">
                <Grid>
                    <Grid>
                        <DataGrid IsReadOnly="True" ItemsSource="{Binding Games}" SelectedItem="{Binding CurrentGame}"
							Margin="10,10,0,0" 
							HorizontalAlignment="Left"
							Height="293"
							VerticalAlignment="Top"
							Width="756"
							AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID gry" Binding="{Binding game_id}"/>
                                <DataGridTextColumn Header="Nazwa gry" Binding="{Binding game_name}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button x:Name="GamesDownloadButton" Content="Pobierz dane" HorizontalAlignment="Left" Margin="10,364,0,0" VerticalAlignment="Top" Width="84" Command="{Binding GetGameDataCmd}" />

                        <Label Content="Nazwa gry" HorizontalAlignment="Left" Margin="10,308,0,0" VerticalAlignment="Top"/>
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,331,0,0" TextWrapping="Wrap" Text="{Binding CurrentGame.game_name, TargetNullValue=x:Static system:String.Empty}" VerticalAlignment="Top" Width="310"/>
                        <Button Content="Aktualizuj!" HorizontalAlignment="Left" Margin="587,334,0,0" VerticalAlignment="Top" Width="75" Command="{Binding UpdateCurrentGameCmd}"/>

                        <Button Content="Usuń!" HorizontalAlignment="Left" Margin="691,334,0,0" VerticalAlignment="Top" Width="75" Command="{Binding DeleteCurrentGameCmd}"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
